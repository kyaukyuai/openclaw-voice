{
  "expo": {
    "name": "OpenClawVoice",
    "slug": "openclaw-voice",
    "entryPoint": "./index.ts",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "音声入力のために音声認識の使用を許可してください。",
        "NSMicrophoneUsageDescription": "音声入力のためにマイクの使用を許可してください。"
      },
      "bundleIdentifier": "com.kyaukyuai.openclawvoice"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "音声入力のためにマイクの使用を許可してください。",
          "speechRecognitionPermission": "音声入力のために音声認識の使用を許可してください。"
        }
      ]
    ]
  }
}
